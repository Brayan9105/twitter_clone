<div class="search-area">
  <h1>Search user</h1>
  <%= form_tag search_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :username, params[:user], placeholder: 'Username', class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag 'Search', class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>

<div id="user-results">
</div>