<h1 class="mb-5">New tweet</h1>

<div class="row">
  <div class="col-12">
    <div class="col-6 mx-auto">
      <%= form_with model: @tweet do |f| %>
        <div class="form-group">
          <%= f.label :body %>        
          <%= f.text_area :body, class: 'form-control' %>
          <br>
          <%= f.submit 'tweet', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>