<% if user_signed_in? %>
<%= link_to current_user.username, user_tweets_path(current_user) %><br>
  <%= link_to 'Tweet', new_tweet_path %><br><br>

  <% @tweets.each do |tweet| %>
    <%= tweet.user.full_name %>, @<%= tweet.user.username %> - <%= time_ago_in_words(tweet.created_at) %> ago<br>
    <%= tweet.body %><br><br>
  <% end %>
<% end %>